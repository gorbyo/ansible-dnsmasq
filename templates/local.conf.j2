# {{ ansible_managed }}

interface=lo
bind-interfaces
bogus-priv
no-poll

all-servers
#strict-order

cache-size=2048
no-negcache
#neg-ttl=259200
max-ttl=345600

log-async=25
{% if dnsmasq_log_query == True %}
log-queries
{% endif %}


# Main DNS
{% for root_dns_ip in dnsmasq_root_dns %}
server={{root_dns_ip}}
{% endfor %}

# Local DNS
{% if dnsmasq_local_dns is defined %}
{% for local_dns_param in dnsmasq_local_dns %}
{% if local_dns_param.port is defined %}
server=/{{local_dns_param.domain}}/{{local_dns_param.ip}}#{{local_dns_param.port}}
{% else %}
server=/{{local_dns_param.domain}}/{{local_dns_param.ip}}
{% endif %}
{% endfor %}
{% endif %}

# Local Hosts A Records
{% if dnsmasq_local_hosts is defined %}
{% for local_hosts_param in dnsmasq_local_hosts %}
address=/{{local_hosts_param.hostname}}/{{local_hosts_param.ip}}
{% endfor %}


# Local Hosts PTR Records
{% for local_hosts_param in dnsmasq_local_hosts %}
ptr-record={{local_hosts_param.ptrrecord}},{{local_hosts_param.hostname}}
{% endfor %}
{% endif %}
